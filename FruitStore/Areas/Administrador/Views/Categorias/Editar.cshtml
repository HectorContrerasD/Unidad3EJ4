@model FruitStore.Models.Entities.Categorias
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<<form method="post" action="~/Administrador/Categorias/Editar">
    <div>
        <h1>Editar Categoría</h1>
        <input hidden asp-for="Id"/>
        <label>Nombre:</label>
        <input type="text" id="txtNombre" required asp-for="Nombre"  />

        <div class="botones">
            <p id="error">@Html.ValidationSummary(true)</p>
            <input type="submit" value="Guardar" id="btnGuardar" />
            <a href="~/Administrador/Categorias">
                <input type="button" value="Cancelar" id="btnCancelar" />
            </a>
        </div>
    </div>
</form>
