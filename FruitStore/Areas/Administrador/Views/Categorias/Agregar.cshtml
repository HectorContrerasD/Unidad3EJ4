@model FruitStore.Models.Entities.Categorias
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Agregar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<form method="post" action="~/Administrador/Categorias/Agregar">
    <div>
        <h1>Agregar Categoría</h1>

        <label>Nombre:</label>
        <input type="text" id="txtNombre" required asp-for="Nombre" />

        <div class="botones">
            <p id="error">@Html.ValidationSummary(true)</p>
            <input type="submit" value="Agregar" id="btnAgregar" />
            <a href="~/Administrador/Categorias">
                <input type="button" value="Cancelar" id="btnCancelar" />
            </a>
        </div>
    </div>
</form>

