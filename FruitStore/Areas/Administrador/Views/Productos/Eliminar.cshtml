@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model FruitStore.Models.Entities.Productos
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<form method="post" action="~/Administrador/Productos/Eliminar">
    <div>
        <h1>Eliminar Producto</h1>
        <input hidden asp-for="Id" />
        <p>¿Está seguro de eliminar la categoría "@(Model.Nombre)"?</p>

        <div class="botones">
            <p id="error">@Html.ValidationSummary(true)</p>
            <input type="submit" value="Si" id="btnSi" />
            <a href="~/Administrador/Productos">
                <input type="button" value="No" id="btnNo" />
            </a>
        </div>
    </div>
</form>